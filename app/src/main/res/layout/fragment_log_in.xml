<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".LogInActivityFragment"
    android:background="@drawable/bottle_use">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:contentDescription="Ocean Background"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/bLogin"
        android:layout_gravity="center_horizontal|bottom"
        android:clickable="true"
        android:layout_below="@+id/anon_log_in"
        android:layout_alignLeft="@+id/Tregister"
        android:layout_alignStart="@+id/Tregister"
        android:layout_alignRight="@+id/Tregister"
        android:layout_alignEnd="@+id/Tregister"
        android:background="#00BFFF"
        android:layout_marginTop="15dp"/>

    <AutoCompleteTextView
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="@string/prompt_username"
        android:inputType="textAutoComplete" android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="158dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/log_out"
        android:layout_alignLeft="@+id/bLogin"
        android:layout_alignStart="@+id/bLogin"
        android:background="#FFFAF0" />


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPassword"
        android:hint="@string/prompt_password"
        android:layout_below="@+id/etUsername"
        android:layout_alignLeft="@+id/etUsername"
        android:layout_alignStart="@+id/etUsername"
        android:layout_alignRight="@+id/etUsername"
        android:layout_alignEnd="@+id/etUsername"
        android:background="#FFFAF0"
        android:layout_marginTop="10dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember Me"
        android:id="@+id/checkBox"
        android:checked="false"
        android:clickable="true"
        android:enabled="true"
        android:allowUndo="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Anonymous Log In"
        android:id="@+id/anon_log_in"
        android:clickable="true"
        android:layout_alignBottom="@+id/checkBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Log Out"
        android:id="@+id/log_out"
        android:clickable="true"
        android:layout_alignBottom="@+id/checkBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Not a member? Sign up here!"
        android:id="@+id/Tregister"
        android:layout_below="@+id/bLogin"
        android:layout_toLeftOf="@+id/log_out"
        android:layout_toStartOf="@+id/log_out"
        android:clickable="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
