<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".LogInActivityFragment"
    android:background="@drawable/paper_texture">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="32dp"
        android:id="@+id/title_register"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:text="@string/app_name"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_register"
        android:src="@drawable/pirate_hat"
        android:layout_alignBottom="@+id/username_prompt"
        android:layout_marginBottom="45dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:text="Log In"
        android:id="@+id/login_button"
        android:clickable="true"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@+id/password_prompt"
        android:layout_alignRight="@+id/password_prompt"
        android:layout_alignEnd="@+id/password_prompt"
        android:layout_alignLeft="@+id/password_prompt"
        android:layout_alignStart="@+id/password_prompt"
        android:background="#2E9AFE"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Not a member? Sign up here!"
        android:id="@+id/register_here"
        android:clickable="true"
        android:textStyle="bold|italic"
        android:layout_below="@+id/login_button"
        android:layout_alignLeft="@+id/password_prompt"
        android:layout_alignStart="@+id/password_prompt"
        android:layout_marginTop="10dp"/>

    <EditText
        android:inputType="text"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:id="@+id/username_prompt"
        android:layout_centerVertical="true"
        android:hint="Username"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="320dp"
        android:layout_marginTop="10dp"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_prompt"
        android:hint="Password"
        android:layout_below="@+id/username_prompt"
        android:layout_alignLeft="@+id/username_prompt"
        android:layout_alignStart="@+id/username_prompt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:text="Anonymous Log In"
        android:id="@+id/anon_log_in"
        android:clickable="true"
        />

</RelativeLayout>