<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yarmatey.messageinabottle.inventory.DriftingBottlesFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/drifting_title_bar">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/pirate_hat"
            android:contentDescription="@string/drifting_title" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop ="13dp"
            android:id="@+id/drifting_label"
            android:text="@string/drifting_title"
            android:textSize="25sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/empty_message"
        android:layout_below="@+id/drifting_title_bar"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        android:text="Nothin' seems to be here, yah scruvy dog!"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/drifting_title_bar"
        android:id="@+id/pirate_booty"
        android:scrollbars="vertical"
        />
    <!--<TextView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:id="@android:id/empty"-->
    <!--android:layout_below="@+id/drifting_title_bar"-->
    <!--android:textSize="24sp"-->
    <!--android:gravity="center_horizontal"-->
        <!--android:text="Arrgh, thur be nothin' here. Ye scruvy dog"/>-->

</RelativeLayout>
