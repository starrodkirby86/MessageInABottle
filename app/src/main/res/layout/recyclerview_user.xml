<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/cardBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/pirate_mast_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"
            android:textSize="20dp"
            android:layout_alignBottom="@+id/delete"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/pirate_mast_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:layout_below="@+id/pirate_mast_title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="delete"
            android:onClick="deleteItem"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24sp"
            android:layout_alignParentBottom="true"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/yar_har_rating"
                android:text="Yar Har! +0"
                android:singleLine="true"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:id="@+id/aye_rating"
                android:textColor="@color/colorAccent"
                android:text="Aye +0" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:id="@+id/nay_rating"
                android:textColor="@color/colorAccent"
                android:text="Nay +0 " />
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:id="@+id/scurvy_rating"
                android:textColor="@color/colorAccent"
                android:text="Scurvy! +0" />
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>