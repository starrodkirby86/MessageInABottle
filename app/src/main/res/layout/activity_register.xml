<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.yarmatey.messageinabottle.RegisterActivity"
    android:background="@drawable/paper_texture">


    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="32dp"
        android:id="@+id/title_register"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:text="New User"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_register"
        android:src="@drawable/pirate_hat"
        android:layout_alignBottom="@+id/username_prompt"
        android:layout_marginBottom="45dp"/>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:text="Register"
        android:id="@+id/bRegister"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/etPassword2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"/>


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:id="@+id/username_prompt"
        android:layout_centerVertical="true"
        android:hint="@string/prompt_username" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_prompt"
        android:layout_below="@+id/username_prompt"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="@string/prompt_password" />


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPassword2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/password_prompt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Repeat Password" />

</RelativeLayout>
